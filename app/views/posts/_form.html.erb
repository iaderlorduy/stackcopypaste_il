<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_area :author %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <% categories_array = @categories.map { |c| [c.title, c.title] } %>
    <%= f.select :category, options_for_select(categories_array) %>
  </div>
 
 <div class="actions">
  <%= f.submit nil, class: "button" %>
  <% if @post %>
    <%= link_to 'Back', @post, class: "button secondary right" %>
  <% else %>
    <%= link_to 'Back', posts_path, class: "button secondary right" %>
  <% end %>
</div>
<% end %>
